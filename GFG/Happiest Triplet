#include <vector>
#include <algorithm>
#include <climits>

using namespace std;

class Solution {
public:
    vector<int> smallestDiff(vector<int>& a, vector<int>& b, vector<int>& c) {
        int n = a.size();
        
        // Sort all three arrays to use the three-pointer approach
        sort(a.begin(), a.end());
        sort(b.begin(), b.end());
        sort(c.begin(), c.end());

        int i = 0, j = 0, k = 0;
        int minDiff = INT_MAX;
        long long minSum = LLONG_MAX; // Use long long to safely handle sums
        vector<int> res(3);

        while (i < n && j < n && k < n) {
            int currentMin = min({a[i], b[j], c[k]});
            int currentMax = max({a[i], b[j], c[k]});
            int currentDiff = currentMax - currentMin;
            long long currentSum = (long long)a[i] + b[j] + c[k];

            // Tie-breaking: smaller difference OR (same difference and smaller sum)
            if (currentDiff < minDiff || (currentDiff == minDiff && currentSum < minSum)) {
                minDiff = currentDiff;
                minSum = currentSum;
                res = {a[i], b[j], c[k]};
            }

            // Move the pointer that points to the smallest element
            if (a[i] == currentMin) i++;
            else if (b[j] == currentMin) j++;
            else k++;
        }

        // Return the triplet in decreasing order
        sort(res.rbegin(), res.rend());
        return res;
    }
};
