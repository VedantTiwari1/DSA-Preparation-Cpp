class Solution {
public:
    uint32_t reverseBits(uint32_t n) {
        uint32_t res = 0;
        
        for (int i = 0; i < 32; i++) {
            // Shift res to make room for the incoming bit
            res = res << 1;
            
            // Get the LSB (Least Significant Bit) of n and add it to res
            res = res | (n & 1);
            
            // Shift n to the right to move to the next bit
            n = n >> 1;
        }
        
        return res;
    }
};
