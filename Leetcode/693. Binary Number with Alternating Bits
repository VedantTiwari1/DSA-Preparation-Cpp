class Solution {
public:
    bool hasAlternatingBits(int n) {
        // Step 1: XOR n with itself shifted right by 1
        // If bits alternate, 'num' will be all 1s (e.g., 111)
        long num = n ^ (n >> 1);
        
        // Step 2: Check if 'num' is of the form 2^k - 1 (all 1s)
        // Using (num & (num + 1)) == 0 is the standard check for this
        return (num & (num + 1)) == 0;
    }
};
