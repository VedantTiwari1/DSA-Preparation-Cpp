class Solution {
public:
    char nextGreatestLetter(vector<char>& letters, char target) {
        int low = 0;
        int high = letters.size() - 1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (letters[mid] > target) {
                // If mid is greater, it could be the answer, 
                // but we look left for a potentially smaller "greater" letter.
                high = mid - 1;
            } else {
                // If mid is less than or equal to target, we must look right.
                low = mid + 1;
            }
        }

        // Using modulo handles the case where low == letters.size()
        return letters[low % letters.size()];
    }
};
