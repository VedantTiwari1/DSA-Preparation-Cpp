#include <vector>
using namespace std;

class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
        int n = nums.size();
        vector<int> result(n);

        for (int i = 0; i < n; ++i) {
            if (nums[i] == 0) {
                // If nums[i] is 0, set result[i] to nums[i]
                result[i] = nums[i];
            } else {
                // Calculate circular index: (current index + shift) % n
                // We add 'n' before the final modulo to handle negative results from nums[i]
                int targetIndex = (i + (nums[i] % n) + n) % n;
                result[i] = nums[targetIndex];
            }
        }

        return result;
    }
};
