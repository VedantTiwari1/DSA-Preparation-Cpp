class Solution {
public:
    int minimumDifference(vector<int>& nums, int k) {
        // If we only need to pick one student, the difference is always 0
        if (k == 1) return 0;

        // Step 1: Sort the scores to bring close values together
        sort(nums.begin(), nums.end());

        int min_diff = INT_MAX;

        // Step 2: Use a sliding window of size k
        // The window ends at 'i' and starts at 'i - k + 1'
        for (int i = k - 1; i < nums.size(); i++) {
            int current_diff = nums[i] - nums[i - k + 1];
            min_diff = min(min_diff, current_diff);
        }

        return min_diff;
    }
};
